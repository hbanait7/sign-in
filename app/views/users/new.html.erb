<h1 id="form-heading">Sign up</h1>

  <%= form_for(@user) do |f| %>
    
    <div id="form-container">
        <span id="form-label"><%= f.label :name %>:</span><br />
        <span id="form-label"><%= f.text_field :name %></span><br />
        
        <span id="form-label"><%= f.label :email %>:</span><br />
        <span id="form-label"><%= f.email_field :email %></span><br />
        
        <span id="form-label"><%= f.label :password %>:</span><br />
        <span id="form-label"><%= f.password_field :password %></span><br />
        
        <span id="form-label"><%= f.label :password_confirmation, "Confirmation" %>:</span><br />
        <span id="form-label"><%= f.password_field :password_confirmation %></span><br />
    
    <%= f.submit "Sign Up" %>
    </div>

  <% end %>